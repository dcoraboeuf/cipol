{
	"uid": "message",
	"name": "Message",
	"description": "Message length",
	"groups": [{
			"name": "translators",
			"members": ["translator1", "translator2"]
		}],
	"rules": [{
			"description": "Minimal message length and authentication is required",
			"path": "/**",
			"rules": [{
					"ruleId": "message",
					"description": "Minimum length",
					"parameters": [{
							"name": "minlength",
							"value": "10"
						}]
				}, {
					"ruleId": "authenticated",
					"description": "Authentication is required"
				}]
		}, {
			"description": "Root files are allowed only for administrators",
			"path": "/*",
			"rules": [{
					"ruleId": "authorization",
					"description": "Only administrators",
					"parameters": [{
							"name": "allowed",
							"value": "admin"
						}]
				}]
		}, {
			"description": "Translation files allowed only for some people",
			"path": "/src/main/resources/META-INF/resources/*.properties",
			"rules": [{
					"ruleId": "authorization",
					"description": "Only translators",
					"parameters": [{
							"name": "allowed",
							"value": "@translators"
						}]
				}]
		}]
}